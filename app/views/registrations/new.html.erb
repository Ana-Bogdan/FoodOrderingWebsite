<% content_for :title, "Eureka Caffe - Register" %>

<% content_for :hero_content do %>
  <%= render 'shared/hero', title: 'Register', description: 'Create your account to get started with Eureka Caffe.' %>
<% end %>

<div class="auth-container">
  <div class="auth-form">
    <h2>Create Account</h2>
    
    <% if flash[:alert] %>
      <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= form_with model: @user, url: signup_path, method: :post, local: true do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-error">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :name, "Full Name" %>
        <%= f.text_field :name, required: true, placeholder: "Enter your full name" %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, required: true, placeholder: "Enter your email" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, required: true, placeholder: "Enter your password (minimum 6 characters)" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm your password" %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "Register", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="auth-links">
      <p>Already have an account? <%= link_to "Login here", login_path, class: "link" %></p>
    </div>
  </div>
</div>
